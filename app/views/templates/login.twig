{% extends "templates/base.twig" %}

    {% block title %}MVCASS{% endblock %}

    {% block includes %}
    <script src="assets/scripts/login.js"></script>
    <script src="assets/scripts/signup.js"></script>
    {% endblock %}


{% block body %}
    <div id="div_login">
        <h1>Login</h1>
        <div id="loginmsg"></div>
        <div>
            <input type="text" id="lemail" name="lemail" placeholder="Email" />
        </div>
        <div>
            <input type="password" id="lpassword" name="lpassword" placeholder="Password" />
        </div>
        <div>
            <input type="button" value="Submit" name="login-button" id="login-button"/>
        </div>
    </div>
    <div id="div_signup">
        <h1>Signup</h1>
        <div id="signupmsg"></div>
        <div>
            <label for="susername">Username:</label>
            <input type="text" id="susername" name="susername" />
        </div>
        <div>
            <label for="semail">Email:</label>
            <input type="text" id="semail" name="semail" />
        </div>
        <div>
            <label for="spassword">Password:</label>
            <input type="password" id="spassword" name="spassword"/>
        </div>
        <div>
            <input type="button" value="Submit" name="signup-button" id="signup-button" />
        </div>
    </div>
{% endblock %}
  